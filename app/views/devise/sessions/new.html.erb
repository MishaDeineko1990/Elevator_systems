<div class="container mt-4">
  <h2 class="text-dark">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-login' }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: 'text-dark' %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'email' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'text-dark' %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: 'current-password' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label text-dark' %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit 'Log in', class: 'btn btn-dark btn-block' %>
    </div>
  <% end %>
</div>


<%= render "devise/shared/links" %>
