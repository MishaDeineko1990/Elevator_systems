<%= form_with(model: firm, class: 'card bg-dark text-white', local: true) do |form| %>
  <% if firm.errors.any? %>
    <div class="card-body" style="color: red;">
      <h2><%= pluralize(firm.errors.count, "error") %> prohibited this firm from being saved:</h2>

      <ul>
        <% firm.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <div class="form-group">
      <%= form.label :name, class: 'text-white' %>
      <%= form.text_field :name, class: 'form-control bg-dark text-white border border-secondary' %>
    </div>

    <div class="form-group">
      <%= form.label :edrpou, class: 'text-white' %>
      <%= form.text_field :edrpou, class: 'form-control bg-dark text-white border border-secondary' %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: 'text-white' %>
      <%= form.text_field :email, class: 'form-control bg-dark text-white border border-secondary' %>
    </div>

    <div class="form-group">
      <%= form.label :ipn, class: 'text-white' %>
      <%= form.text_field :ipn, class: 'form-control bg-dark text-white border border-secondary' %>
    </div>

    <div class="form-group">
      <%= form.label :data, class: 'text-white' %>
      <%= form.text_area :data, class: 'form-control bg-dark text-white border border-secondary' %>
    </div>

    <div class="form-group">
      <%= form.label :user_id, class: 'text-white' %>
      <%= form.text_field :user_id, class: 'form-control bg-dark text-white border border-secondary', id: 'firm_user_id', placeholder: 'User ID' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save', class: 'btn btn-dark' %>
    </div>
  </div>

<% end %>
